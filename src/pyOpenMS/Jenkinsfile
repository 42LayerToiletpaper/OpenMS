pipeline {
    agent {label "macos && silicon"}

    stages {
        stage('Checkout') {
            steps {
                dir("OpenMS") {
                    checkout scm
                }
            }
        }
        stage('Build') {
            steps {
                sh """
                    echo $PATH
                    echo 'Building..'
                    mkdir -p OpenMS-build && cd OpenMS-build
                    cmake -DPYOPENMS=ON ../OpenMS
                """
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}